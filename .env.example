# Required
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_SOURCE_CHAT_ID=@source_channel_or_id
TELEGRAM_DESTINATION_CHAT_ID=@destination_channel_or_id

# Logging
LOG_LEVEL=info

# Polling
POLL_INTERVAL_MS=1000

# Networking
HTTP_PROXY=

# Message delay (ms) before forwarding
MESSAGE_DELAY_MS=30000

# Translation (primary: Google, fallback: DeepL)
TRANSLATION_ENABLED=true
TRANSLATION_PROVIDER=google
TRANSLATION_FALLBACK_PROVIDER=deepl
TRANSLATION_SOURCE_LANG=cn
TRANSLATION_TARGET_LANG=en
TRANSLATION_SHOW_ORIGINAL=false
TRANSLATION_MAX_LENGTH=4000

# Google Cloud Translation
GOOGLE_TRANSLATE_API_KEY=xyz
GOOGLE_TRANSLATE_PROJECT_ID=xyz

# DeepL
DEEPL_API_KEY=
